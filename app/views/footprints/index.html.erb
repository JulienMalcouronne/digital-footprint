<div class="container">
  <div class="title text-center d-flex justify-content-between align-items-center">
    <% if current_user && current_user.footprints.any? %>
    <%= link_to "Log out", destroy_user_session_path, :method => :get %>
    <%= link_to "calculate another carbon footprint", new_footprint_path %>
    <h1>Please find below all your digital carbon footprint</h1>
    <% else %>
    <%= link_to "calculate your carbon footprint", new_footprint_path %>
    <% end  %>
  </div>
  <div class="" >
    <% current_user.footprints.each do |footprint| %>
      <div class="">
        <h3><strong>Total Carbon Footprint:</strong> <%= footprint.carbon_footprint %></h3>
        <%# <% if footprint.terminal_category ==  %>
        <%= link_to "See datas", footprint_path(footprint[:id]) %>
      <% end %>
  </div>
</div>
