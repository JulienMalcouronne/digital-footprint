<div class="container">
  <div class="title text-center d-flex justify-content-between align-items-center">
    <% if @footprints.any? %>
    <h1>Please find below all your digital carbon footprint</h1>
    <% else %>
    <% link_to "calculate your carbon footprint", new_footprint_path %>
    <% end  %>
  </div>
  <div class="" >
    <% @footprints.each do |footprint| %>
      <div class="">
        <%= footprint.duration_on_terminal  %>
        <%= footprint.terminal_category %>
        <%= footprint.data_size %>
        <%= footprint.country %>
      <% end %>
  </div>
</div>
